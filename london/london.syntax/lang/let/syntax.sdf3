module lang/let/syntax

imports lang/base/syntax
imports lang/variable/syntax

context-free syntax
  
  Exp.LetSeq = <
    let 
      <{Bind ";\n"}*> 
    in 
      <Exp>
  >
  Exp.LetPar = <
    letpar
      <{Bind ";\n"}*> 
    in 
      <Exp>
  >
  Exp.LetRec = <
    letrec 
      <{Bind ";\n"}*> 
    in 
      <Exp>
  >
  
template options
  ID = keyword {reject}
  keyword -/- [a-zA-Z0-9]